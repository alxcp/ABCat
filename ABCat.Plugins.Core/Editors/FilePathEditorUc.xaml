<UserControl x:Class="ABCat.Core.Editors.FilePathEditorUc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBox Text="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=FilePath}" />
        <Button Grid.Column="1" Margin="2" MinWidth="20" x:Name="SelectFolderBtn" Click="SelectFolderBtn_OnClick">...</Button>
    </Grid>
</UserControl>